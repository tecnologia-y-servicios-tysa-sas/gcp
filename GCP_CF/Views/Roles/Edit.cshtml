@model GCP_CF.Models.Rol

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Roles</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RolId)                
    </div>

    <div class="panel">
        <div class="panel-heading">
            <h3>
                <i class="glyphicon glyphicon-cog"></i> Detalle
            </h3>
        </div>

        <div class="panel-body">

            <div class="form-horizontal">

                <div class="form-group">
                    <div class="col-md-2 text-right">
                        @Html.LabelFor(model => model.Descripción, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Descripción, new { htmlAttributes = new { @class = "form-control", @id = "nombres" } })
                        @Html.ValidationMessageFor(model => model.Descripción, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="btn-block text-center">
        <input type="submit" value="Editar Rol" class="btn btn-default" />
        <a href="@Url.Action("Index", "Roles")" class="btn btn-success">
            <i class="glyphicon glyphicon-list"></i> Regresar al Listado
        </a>
    </div>


}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
