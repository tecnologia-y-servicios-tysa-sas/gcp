@model GCP_CF.Models.PermisosRoles
@{
    ViewBag.Title = "Editar Roles";
}

<h2>Editar Permisos Roles</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PermisosRolesId)
    @Html.HiddenFor(model => model.RolId)
    @Html.HiddenFor(model => model.PermisoId)
</div>

    <div class="panel">
        <div class="panel-heading">
            <h3>
                <i class="glyphicon glyphicon-cog"></i> Detalle
            </h3>
        </div>

        <div class="panel-body">

            <div class="form-horizontal">

                <div class="form-group">
                    <div class="col-md-2 text-right">
                        @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control", @id = "nombres" } })
                        @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <div class="btn-block text-center">
        <input type="submit" value="Editar Permiso" class="btn btn-default" />
       
    </div>

}