@model IEnumerable<GCP_CF.Models.Personas>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-left">Personas</h2>

<p class="text-left">
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-default btn-large" })
</p>
<table class="table text-center">
    <tr>
        <th class="head-table">
            Tipo Persona
            @*@Html.DisplayNameFor(model => model.TiposPersona.Descripcion)*@
        </th>
        <th class="head-table">
            Tipo Documento
        </th>
        <th class="head-table">
            Número Documento
        </th>
        <th class="head-table">
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th class="head-table">
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th class="head-table">
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th class="head-table">
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th class="head-table">
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th class="head-table"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="border-cell">
            @Html.DisplayFor(modelItem => item.TiposPersona.Descripcion)
        </td>
        <td class="border-cell">
            @Html.DisplayFor(modelItem => item.TiposDocumentos.Descripcion)
        </td>
        <td class="border-cell">
            @Html.DisplayFor(modelItem => item.NumeroDocumento)
        </td>
        <td class="border-cell">
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td class="border-cell">
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td class="border-cell">
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td class="border-cell">
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td class="border-cell">
            @Html.DisplayFor(modelItem => item.Correo)
        </td>
        <td class="border-cell">
            @Html.ActionLink("Editar", "Edit", new { id = item.Persona_Id }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Persona_Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Persona_Id })
        </td>
    </tr>
}

</table>
