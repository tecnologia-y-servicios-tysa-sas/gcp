@model GCP_CF.Models.TiposPersona

@{
    ViewBag.Title = "Create";
}

<h2>Crear Tipo de Terceros</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                <div>@Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })</div>
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           
            <div class="col-md-12">
                <div> @Html.LabelFor(model => model.Naturaleza_Id, "Naturaleza", htmlAttributes: new { @class = "control-label" })</div>               
                @Html.DropDownList("Naturaleza_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Naturaleza_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
          
            <div class="col-md-12">
                <div>  @Html.LabelFor(model => model.Cargo, htmlAttributes: new { @class = "control-label" })</div>              
                @Html.EditorFor(model => model.Cargo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cargo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Crear Tipo de Tercero" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
